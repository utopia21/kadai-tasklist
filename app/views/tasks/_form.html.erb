<%= form_for(task) do |f| %>
  <% if task.errors.any? %>
    <div id="error_explanation">
      <ul>
        <% task.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  
  <%= f.label :content, "タスク" %>
  <%= f.text_field :content %>
  
  <%= f.label :status, "ステータス" %>
  <%= f.select :status, [["新規","新規"], ["着手中","着手中"], ["完了","完了"]], :include_blank => true %>
  
  <%= f.submit "登録" %>
<% end %>