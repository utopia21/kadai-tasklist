<table class="table">
  <thead>
    <tr>
      <th>ID</th>
      <th>ステータス</th>
      <th>タスク</th>
      <th>作成者</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% tasks.each do |task| %>
      <tr>
        <td><%= link_to task.id, task %></td>
        <td><span class="label label-default"><%= task.status %></span></td>
        <td><%= task.content %></td>
        <td><%= task.user.name %></td>
        <td>
          <% if current_user == task.user %>
            <%= link_to "編集", edit_task_path(task), class: "btn btn-primary btn-xs" %>
            <%= link_to "削除", task, method: :delete, data: { confirm: "本当に削除してよろしいですか?" }, class: "btn btn-danger btn-xs" %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>