<h1>ID:<%= @task.id %>のタスク詳細ページ</h1>

<table class="table">
  <thead>
    <tr>
      <th>ステータス</th>
      <th>タスク</th>
      <th>作成者</th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <td><span class="label label-default"><%= @task.status %></span></td>
      <td><%= @task.content %></td>
      <td><%= @task.user.name %></td>
    </tr>
  </tbody>
</table>
<% if current_user == @task.user %>
  <%= link_to "このタスクを編集する", edit_task_path(@task), class: "btn btn-default" %>
  <%= link_to 'このメッセージを削除する', @task, method: :delete, data: { confirm: '本当に削除してよろしいですか？' }, class: "btn btn-danger" %>
<% end %>